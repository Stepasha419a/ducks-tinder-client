{
  "name": "@ducks-tinder-client/policy",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "dtc apply-env -m dev && webpack serve --config ./config/development.config.js --mode=development",
    "demo": "dtc apply-env -m demo && webpack serve --config ./config/development.config.js --mode=development",
    "build": "webpack --config ./config/production.config.js --mode=production",
    "lint": "eslint src/** --ext .ts --ext .tsx --ext .js  --max-warnings=0",
    "lint:fix": "eslint src/** --ext .ts --ext .tsx --ext .js --fix --max-warnings=0",
    "prettier": "prettier --check src/**/*{.css,.scss,.ts,.tsx,.js,.jsx}",
    "prettier:fix": "prettier --write src/**/*{.css,.scss,.ts,.tsx,.js,.jsx}",
    "steiger": "steiger ./src"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@ducks-tinder-client/ui": "1.1.7-alpha.1",
    "browserslist": "^4.28.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-refresh": "^0.18.0",
    "react-router-dom": "^7.9.5",
    "react-toastify": "^11.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@ducks-tinder-client/config": "1.1.1-alpha.17",
    "@eslint/js": "^9.39.1",
    "@feature-sliced/eslint-config": "^0.1.1",
    "@feature-sliced/steiger-plugin": "^0.5.7",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "sass-loader": "^16.0.6",
    "steiger": "^0.5.11",
    "style-loader": "^4.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "webpack": "^5.102.1"
  }
}
